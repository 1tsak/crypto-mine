<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:fontFamily="@font/sn_bold"
        android:letterSpacing="0.01"
        android:layout_centerHorizontal="true"
        android:text="Refer Screen"
        android:textColor="@color/main_color"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/referer_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="#FFAF3A"
        android:layout_marginEnd="25dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:paddingBottom="25dp">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="25dp"
                android:src="@drawable/ic_gift_box" />


            <EditText
                android:id="@+id/refEditText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:textColorHint="@color/white"
                android:background="@drawable/rounded_corner_border"
                android:hint="Enter Refer Code"
                android:textAlignment="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/gray_dark"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/submit"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_below="@id/refEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                app:cardBackgroundColor="#03A9F4"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sn_sembold"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/infotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/sn_nl"
                android:textAlignment="center"
                android:letterSpacing="0.01"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:text="Enter Refer Code You Will Get Instant 50 NiN Coins In Your Wallet"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>