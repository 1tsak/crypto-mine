<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".FragmentHome">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#333639"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:cardElevation="@dimen/dimen_3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <TextView
                android:id="@+id/actv_contsttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Active Contest"
                android:textColor="@color/primary_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/seperator_2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/actv_contsttxt"
                android:layout_marginTop="5dp"
                android:background="@color/primary_color" />

            <TextView
                android:id="@+id/counttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seperator_2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_baseline_info_24"
                android:drawablePadding="2dp"
                android:drawableTint="@color/white"
                android:text="0000000"
                android:textColor="@color/white_80"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/periodidtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seperator_2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_baseline_timer_24"
                android:drawablePadding="2dp"
                android:drawableTint="@color/white"
                android:text="3:00 min"
                android:textColor="@color/white_80"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/colorbidtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/counttxt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Colour Bid"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/colorbidcont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/colorbidtxt"
                android:gravity="center"
                android:weightSum="3">

                <Button
                    android:id="@+id/greenbtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:text="JOIN GREEN"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/violetbtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="#673AB7"
                    android:text="JOIN VIOLET"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/redbtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="#F44336"
                    android:text="JOIN RED"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/numberbidtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/colorbidcont"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Number Bid"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/numberslot1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/numberbidtxt"
                android:weightSum="5">

                <Button
                    android:id="@+id/btnmbr0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="0"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnmbr1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="1"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnmbr2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="2"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnmbr3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="3"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnmbr4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="4"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/numberslot2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/numberslot1"
                android:weightSum="5">


                <Button
                    android:id="@+id/btnmbr5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="5"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnmbr6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="6"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnmbr7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="7"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnmbr8"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="8"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnmbr9"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bg_color"
                    android:text="9"
                    android:textColor="@color/white_80"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/numberslot3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/numberslot2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:weightSum="4">


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>