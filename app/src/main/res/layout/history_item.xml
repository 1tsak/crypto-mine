<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:padding="5dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/h_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sn_regular"
            android:text="Daily Mining"/>
        <TextView
            android:id="@+id/h_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/h_tittle"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/sn_nl"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="01 Jan 1000"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_border"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/coinTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:fontFamily="@font/sn_bold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:drawablePadding="5dp"
                android:drawableTint="@color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NiN"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/sn_regular"
                android:textColor="@color/main_color"
                android:layout_toRightOf="@id/coinTxt"/>



        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

</RelativeLayout>